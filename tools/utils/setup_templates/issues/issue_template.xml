<project>
  <dashboards>
    <dashboard name="0 - Global Dashboard">
      <line layout= "two-columns-big-small">
        <column>

          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="All_Issues_Priority_Chart_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">All issues Priority Chart</value>
            </preference>
          </widget>
          <widget name="projectheartbeat" />
        </column>
        <column>
          <widget name="projectnote">
            <preference name="note">
              <value name="title">Note from the Tuleap team</value>
              <value name="content"><![CDATA[
Welcome to your new project!

It is based on Issue Tracking template.

You will find a tracker named "Issues" to trace and track all your items
and a Git to create all repositories your team needs.

]]></value>
            </preference>
          </widget>
          <widget name="projectmembers" />
          <widget name="projectcontacts" />
        </column>
      </line>
    </dashboard>
    <dashboard name="0 - Team View">
      <line>
        <column>
          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="Open_Issues_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">Open Issues</value>
            </preference>
          </widget>
          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="Critical_Issues_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">Critical Issues</value>
            </preference>
          </widget>
        </column>
        <column>
          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="Open_Issues_Charts_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">Open Issues Charts</value>
            </preference>
          </widget>
        </column>
      </line>
      <line>
        <column>
          <widget name="projectlatestgitcommits" />
        </column>
      </line>
    </dashboard>
    <dashboard name="2 - Manager View">
      <line>
        <column>
          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="Critical_Issues_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">Critical Issues</value>
            </preference>
          </widget>
          <widget name="plugin_tracker_projectrenderer">
            <preference name="renderer">
              <reference name="id" REF="All_Issues_Charts_to_be_used_in_remaining_XML_dashboard_definition"></reference>
              <value name="title">All issues Charts</value>
            </preference>
          </widget>
        </column>
      </line>
    </dashboard>
  </dashboards>
</project>
