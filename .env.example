# Brown Bear Project Environment Configuration
# Copy this file to .env and customize the values

# ================================
# Core Application Settings
# ================================
TULEAP_SYS_DBHOST=db
TULEAP_SYS_DBNAME=tuleap
MYSQL_ROOT_PASSWORD=tuleap123!
MYSQL_USER=tuleap
MYSQL_PASSWORD=tuleap123!
MYSQL_DATABASE=tuleap

# LDAP Configuration
LDAP_MANAGER_PASSWORD=tuleap123!
LDAP_ROOT_PASSWORD=tuleap123!

# ================================
# Development Settings
# ================================
# Set to 'development' for dev mode, 'production' for prod
TULEAP_ENVIRONMENT=development

# Enable/disable features
TULEAP_ENABLE_FORGE_ACCESS=1
TULEAP_ENABLE_REALTIME=1
TULEAP_ENABLE_PROMETHEUS=1

# ================================
# GitLab Integration
# ================================
GITLAB_ROOT_PASSWORD=tuleap123!
GITLAB_SHARED_RUNNERS_REGISTRATION_TOKEN=brownbear2025token

# ================================
# Jenkins Configuration
# ================================
JENKINS_ADMIN_PASSWORD=tuleap123!
JENKINS_SLAVE_AGENT_PORT=50000

# ================================
# SonarQube Settings
# ================================
SONAR_PGUSER=sonar
SONAR_PGPASS=sonar123!
SONAR_WEB_JAVAOPTS=-Xmx512m -Xms128m
SONAR_CE_JAVAOPTS=-Xmx512m -Xms128m
SONAR_SEARCH_JAVAOPTS=-Xmx512m -Xms512m

# ================================
# Nexus Repository
# ================================
NEXUS_ADMIN_PASSWORD=tuleap123!
INSTALL4J_ADD_VM_PARAMS=-Xms1g -Xmx1g

# ================================
# Gerrit Code Review
# ================================
GERRIT_ADMIN_USER=admin
GERRIT_ADMIN_EMAIL=admin@brownbear.local
GERRIT_ADMIN_PASSWORD=tuleap123!

# ================================
# SSL and Security
# ================================
SSL_CERTIFICATE_PATH=/etc/pki/tls
REVERSE_PROXY_SSL_CERTIFICATE=/etc/pki/tls/certs/localhost.crt

# ================================
# Monitoring
# ================================
PROMETHEUS_RETENTION_TIME=30d
METRICS_SECRET_KEY=brownbear_metrics_secret_2025

# ================================
# Volume Mappings
# ================================
TULEAP_DATA_VOLUME=tuleap-data
GITLAB_CONFIG_VOLUME=gitlab-config
GITLAB_DATA_VOLUME=gitlab-data
NEXUS_VOLUME_DATA=nexus-volume-data
SONAR_VOLUME_CONFIG=sonar-volume-config
SONAR_VOLUME_DATA=sonar-volume-data
SONAR_VOLUME_EXT=sonar-volume-ext
SONAR_VOLUME_DB=sonar-volume-dbdata

# ================================
# Network Configuration
# ================================
BROWNBEAR_NETWORK=brownbear_network
WEB_HOSTNAME=brownbear.local
GITLAB_HOSTNAME=gitlab.brownbear.local
GERRIT_HOSTNAME=gerrit.brownbear.local
JENKINS_HOSTNAME=jenkins.brownbear.local
SONAR_HOSTNAME=sonar.brownbear.local
NEXUS_HOSTNAME=nexus.brownbear.local

# ================================
# Development Tools
# ================================
NODE_ENV=development
COMPOSER_ALLOW_SUPERUSER=1
PNPM_VERSION=8.15.0
