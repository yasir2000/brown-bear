<div class="tlp-modal tlp-modal-warning" role="dialog" aria-labelledby="browser-deprecation-modal-label" id="browser-deprecation-modal"
     {{^ can_be_dismiss }}data-non-dismissible{{/ can_be_dismiss }}>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="browser-deprecation-modal-label">
            {{ title }}
        </h1>
        {{# can_be_dismiss }}
            <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
                <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
            </button>
        {{/ can_be_dismiss }}
    </div>
    <div class="tlp-modal-body">
        {{ message }}
    </div>
    {{^ can_be_dismiss }}
        <div class="tlp-modal-footer" aria-hidden="true">
            <button type="button"
                    class="tlp-button-warning tlp-button-outline tlp-modal-action tlp-tooltip tlp-tooltip-right"
                    data-tlp-tooltip="{{# gettext}}This message cannot be hidden until it has been taken into account{{/ gettext }}"
                    disabled
            >
                {{# gettext }}Ok, got it{{/ gettext }}
            </button>
        </div>
    {{/ can_be_dismiss }}
    {{# can_be_dismiss }}
        <div class="tlp-modal-footer">
            <button type="button" class="tlp-button-warning tlp-button-outline tlp-modal-action" data-dismiss="modal">{{# gettext }}Ok, got it{{/ gettext }}</button>
        </div>
    {{/ can_be_dismiss }}
</div>
