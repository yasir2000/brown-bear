<div class="tlp-framed-vertically">
    {{> creation-settings-tabs }}

        <div class="tlp-framed-horizontally">
            <div class="tlp-pane">
                <div class="tlp-pane-container">
                    <div class="tlp-pane-header">
                        <h1 class="tlp-pane-title"><i class="fa fa-eye tlp-pane-title-icon"></i>{{# gettext }}Widgets availability{{/ gettext }}</h1>
                    </div>
                    <section class="tlp-pane-section">
                        <table class="tlp-table" id="project-widgets-list">
                            <thead>
                                <tr>
                                    <th>{{# gettext }}Id{{/ gettext }}</th>
                                    <th>{{# gettext }}Title{{/ gettext }}</th>
                                    <th>{{# gettext }}Available?{{/ gettext }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{# project_widgets }}
                                <tr>
                                    <td>{{ id }}</td>
                                    <td>{{ title }}</td>
                                    <td>
                                        <form action="{{ form_url }}" method="POST" id="project-widgets-form-{{ id }}">
                                            {{# csrf_token }}
                                                {{> csrf_token_input }}
                                            {{/ csrf_token }}
                                            <div class="tlp-switch tlp-switch-mini tlp-table-cell-actions-button">
                                                <input type="checkbox"
                                                       id="{{ id }}"
                                                       class="tlp-switch-checkbox"
                                                       data-form-id="project-widgets-form-{{ id }}"
                                                       {{^ is_disabled }}checked="checked"{{/ is_disabled }}
                                                       data-test="project-widgets-checkbox-{{ id }}"
                                                >
                                                <label for="{{ id }}" class="tlp-switch-button"></label>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            {{/ project_widgets }}
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </form>
</div>
