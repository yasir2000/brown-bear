<div class="tlp-modal tlp-modal-danger" id="trove-cat-delete-{{ trove_cat_id }}" role="dialog">

    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title">
            {{ delete_trove_cat }} {{ fullname }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close"><i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i></button>
    </div>
    <form method="post">
        <input type="hidden" name="action" value="delete">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <div class="tlp-modal-body trove-cats-modal-action">
            <input type="hidden" name="trove_cat_id" value="{{ trove_cat_id }}">
            <input type="hidden" name="parent" value="{{ parent }}">
            <p>{{{ purified_delete_message }}} </p>
        </div>
        <div class="tlp-modal-footer">
            <button type="button" class="tlp-button-primary tlp-button-danger tlp-button-outline tlp-modal-action"
                    data-dismiss="modal">{{ cancel }}
            </button>
            <button type="submit"
                    class="tlp-button-primary tlp-button-danger tlp-modal-action">{{ delete_button }}</button>
        </div>
    </form>

</div>
