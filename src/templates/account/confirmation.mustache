<div id="account-confirmation-header">
    <h2>{{{ title }}}</h2>
</div>
<div id="account-confirmation-content">
    <p>{{{ content }}}</p>

    {{# displayed_image }}
        <img id="account-confirmation-envelope" src="/themes/common/images/email.svg" />
        <div id="account-confirmation-fake-email" class="envelope-animation">
            <div class="thumbnail thumbnail-fake-email">
                <div class="caption-fake-email">
                    {{# email_presenter }}
                        <div id="account-confirmation-fake-email-title">
                            <img id="account-confirmation-fake-email-title-logo" src="{{ logo_url }}"/>
                        </div>
                        <h3>{{ title }}</h3>
                        <p>{{ section_one }}<b>{{ login }}</b>{{ section_after_login }}</p>
                        <p>{{ section_two }}</p>
                        <p id="account-confirmation-fake-email-button"><span>{{ redirect_button }}</span></p>
                    {{/ email_presenter }}
                </div>
            </div>
        </div>
    {{/ displayed_image}}
</div>

{{# is_thanks }}
    <div id="account-confirmation-thanks">
        {{ thanks }}
    </div>
{{/ is_thanks}}

<div id="account-confirmation-redirect">
    <a href="{{ redirect_url }}" name="personal_page" class="btn btn-large btn-primary" role="button"> {{ redirect_content }} </a>
</div>
