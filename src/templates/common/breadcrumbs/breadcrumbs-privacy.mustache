<div class="breadcrumb-privacy-icon-container">
    {{# privacy }}
        <span
            id="breadcrumb-project-privacy-icon"
            {{# has_project_flags }}class="breadcrumb-project-privacy-icon-with-flags"{{/ has_project_flags }}
            data-project-name="{{ project_name }}"
            data-privacy-title="{{ privacy_title }}"
            data-privacy-description="{{ explanation_text }}"
            data-project-flags="{{ json_encoded_project_flags }}"
            {{# are_restricted_users_allowed }}
                {{# project_is_public }}
                        data-privacy-icon="fa-lock-open"
                    >
                        <i class="fas fa-lock-open breadcrumb-project-privacy-icon"></i>
                {{/ project_is_public }}
                {{# project_is_public_incl_restricted }}
                        data-privacy-icon="fa-tlp-unlock-plus-r"
                    >
                        <i class="fas fa-tlp-unlock-plus-r breadcrumb-project-privacy-icon"></i>
                {{/ project_is_public_incl_restricted }}
                {{# project_is_private }}
                        data-privacy-icon="fa-lock"
                    >
                        <i class="fas fa-lock breadcrumb-project-privacy-icon"></i>
                {{/ project_is_private }}
                {{# project_is_private_incl_restricted }}
                        data-privacy-icon="fa-tlp-lock-plus-r"
                    >
                        <i class="fas fa-tlp-lock-plus-r breadcrumb-project-privacy-icon"></i>
                {{/ project_is_private_incl_restricted }}
            {{/ are_restricted_users_allowed }}
            {{^ are_restricted_users_allowed }}
                {{# project_is_public }}
                        data-privacy-icon="fa-lock-open"
                    >
                        <i class="fas fa-lock-open breadcrumb-project-privacy-icon"></i>
                {{/ project_is_public }}
                {{^ project_is_public }}
                        data-privacy-icon="fa-lock"
                    >
                        <i class="fas fa-lock breadcrumb-project-privacy-icon"></i>
                {{/ project_is_public }}
            {{/ are_restricted_users_allowed }}

            {{# has_project_flags }}
                {{# glyph }}project-shield{{/ glyph }}
                <span class="current-project-nav-flag-labels">
                    {{# project_flags }}
                        <span class="current-project-nav-flag-label">{{ label }}</span>
                    {{/ project_flags }}
                </span>
            {{/ has_project_flags }}
        </span>

        <section class="tlp-popover" id="current-project-nav-title-popover">
            <div class="tlp-popover-arrow"></div>
            <div class="tlp-popover-header">
                {{# has_project_flags }}
                    <h1 class="tlp-popover-title">{{ project_name }}</h1>
                {{/ has_project_flags }}
                {{^ has_project_flags }}
                    <h1 class="tlp-popover-title">{{ privacy_title }}</h1>
                {{/ has_project_flags }}
            </div>
            <div class="tlp-popover-body">
                {{# has_project_flags }}
                    <div class="current-project-nav-flag-popover-flag">
                        {{# are_restricted_users_allowed }}
                            {{# project_is_public }}
                                <i class="fas fa-lock-open"></i>
                            {{/ project_is_public }}
                            {{# project_is_public_incl_restricted }}
                                <i class="fas fa-tlp-unlock-plus-r"></i>
                            {{/ project_is_public_incl_restricted }}
                            {{# project_is_private }}
                                <i class="fas fa-lock"></i>
                            {{/ project_is_private }}
                            {{# project_is_private_incl_restricted }}
                                <i class="fas fa-tlp-lock-plus-r"></i>
                            {{/ project_is_private_incl_restricted }}
                        {{/ are_restricted_users_allowed }}
                        {{^ are_restricted_users_allowed }}
                            {{# project_is_public }}
                                <i class="fas fa-lock-open"></i>
                            {{/ project_is_public }}
                            {{^ project_is_public }}
                                <i class="fas fa-lock"></i>
                            {{/ project_is_public }}
                        {{/ are_restricted_users_allowed }}
                        <h2 class="current-project-nav-flag-popover-content-title">
                            {{ privacy_title }}
                        </h2>
                        <p class="current-project-nav-title-popover-description">{{ explanation_text }}</p>
                    </div>
                    <hr class="current-project-nav-flag-popover-separator">
                    {{# project_flags }}
                        <div class="current-project-nav-flag-popover-flag">
                            {{# glyph }}project-shield{{/ glyph }}
                            <h2 class="current-project-nav-flag-popover-content-title">
                                {{ label }}
                            </h2>
                            {{# description }}
                                <p class="current-project-nav-flag-popover-content-description">
                                    {{ description }}
                                </p>
                            {{/ description }}
                        </div>
                    {{/ project_flags }}
                {{/ has_project_flags }}
                {{^ has_project_flags}}
                    <p class="current-project-nav-title-popover-description">{{ explanation_text }}</p>
                {{/ has_project_flags }}
            </div>
        </section>
    {{/ privacy }}
</div>
