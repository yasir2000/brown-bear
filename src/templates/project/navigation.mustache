<h1 class="project-administration-title" data-test="project-administration-title">{{ admin_section_title }}</h1>

<div class="main-project-tabs" data-test="project-administration-navigation">
    <nav class="tlp-tabs">
        {{# getEntries }}
            {{# hasSubItems }}
                <div class="tlp-tab{{# is_active }} tlp-tab-active{{/ is_active }}">
                    {{# label }}
                        {{ label }}
                    {{/label}}
                    {{^ label }}
                        <i class="fas fa-bars"></i>
                    {{/ label }}
                    <i class="fa fa-caret-down"></i>
                    <nav class="tlp-tab-menu">
                        {{# menu_items }}
                            {{# isMenuTitle }}
                                <span class="tlp-tab-menu-title">{{ title }}</span>
                            {{/ isMenuTitle}}
                            {{^ isMenuTitle }}
                                <a href="{{ html_url }}" class="tlp-tab-menu-item" data-test="{{ identifier }}">{{ label }}</a>
                            {{/ isMenuTitle}}
                        {{/ menu_items }}
                    </nav>
                </div>
            {{/ hasSubItems }}
            {{^ hasSubItems }}
                <a href="{{ html_url }}" class="tlp-tab{{# is_active }} tlp-tab-active{{/ is_active }}" data-test="admin-nav-{{ shortname }}">{{ label }}</a>
            {{/ hasSubItems }}
        {{/ getEntries }}
    </nav>
</div>
