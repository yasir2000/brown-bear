<form method="POST"
      action="/project/{{ project_id }}/admin/services/delete"
      class="tlp-modal tlp-modal-danger"
      role="dialog"
      id="project-admin-services-delete-modal"
      aria-labelledby="project-admin-services-delete-modal-title"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="project-admin-services-delete-modal-title">
            {{# gettext }} Delete service {{/ gettext }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        {{# csrf }}
            {{> csrf_token_input }}
        {{/ csrf }}
        <input type="hidden" name="service_id" id="project-admin-services-delete-modal-service-id">
        {{# is_default_template }}
            <div class="tlp-alert tlp-alert-warning">
                {{# gettext }}This will remove this service from all projects.{{/ gettext }}
            </div>
        {{/ is_default_template }}
        <p id="project-admin-services-delete-modal-description"></p>
    </div>
    <div class="tlp-modal-footer">
        <button type="reset" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Cancel{{/ gettext }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action user-group-modal-button">
            <i class="far fa-trash-alt tlp-button-icon"></i> {{# gettext }}Delete{{/ gettext }}
        </button>
    </div>
</form>
