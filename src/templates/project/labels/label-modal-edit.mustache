<form action="/project/admin/labels.php?group_id={{ project_id }}"
      method="POST"
      class="tlp-modal"
      id="project-label-edit-{{ id }}"
      role="dialog"
>
    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
    <input type="hidden" name="action" value="edit">
    <input type="hidden" name="id" value="{{ id }}">
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title">
            {{ edit_title }}
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{ cancel }}"><i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i></button>
    </div>
    {{> label-modal-form }}
</form>
