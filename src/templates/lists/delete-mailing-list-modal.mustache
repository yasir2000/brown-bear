
<form
    method="POST"
    action="{{ delete_url }}"
    id="mailing-lists-delete-list-modal-{{ id }}"
    class="tlp-modal tlp-modal-danger"
    role="dialog"
    aria-labelledby="mailing-lists-delete-list-modal-{{ id }}-label"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title">
            <span id="mailing-lists-delete-list-modal-{{ id }}-label">
                {{# gettext }}Delete a mailing list{{/ gettext }}
            </span>
        </h1>
        <button class="tlp-modal-close"
             type="button"
             data-dismiss="modal"
             aria-label="{{# gettext }}Close{{/ gettext }}"
        >
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <p>
            {{# gettext }}You are about to remove the mailing list %s. | {{ name }}{{/ gettext }}
            {{# gettext }}This operation cannot be undone. {{/ gettext }}
            {{# gettext }}Please confirm your action.{{/ gettext }}
        </p>
    </div>
    <div class="tlp-modal-footer">
        <button type="reset" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Cancel{{/ gettext }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action">
            <i class="far fa-trash-alt tlp-button-icon" aria-hidden="true"></i>
            {{# gettext }}Delete %s | {{ name }}{{/gettext}}
        </button>
    </div>
</form>
