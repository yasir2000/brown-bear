<div class="user-preferences">
    <h1 class="user-preferences-title">
        {{# gettext }}Preferences{{/ gettext }}
    </h1>
    <div class="user-preferences-container">
        {{> user-account-tabs }}

        <div class="user-preferences-section">
            <section class="tlp-pane">
                <form class="tlp-pane-container" action="/account/edition" method="post">
                    <div class="tlp-pane-header">
                        <h1 class="tlp-pane-title">
                            <i class="tlp-pane-title-icon fas fa-pencil-alt" aria-hidden="true"></i>
                            {{# gettext }}Edition & CSV{{/ gettext }}
                        </h1>
                    </div>
                    <section class="tlp-pane-section">

                        <div class="tlp-form-element">
                            <label class="tlp-label">{{# gettext }}Default format for trackers text fields{{/ gettext }}</label>
                            <label class="tlp-label tlp-radio">
                                <input type="radio"
                                       name="user_text_default_format"
                                       data-test="user-prefs-tracker-default-format-html"
                                       value="html"
                                       {{# user_text_default_format_html }}checked{{/ user_text_default_format_html }}>
                                HTML
                            </label>
                            <label class="tlp-label tlp-radio">
                                <input type="radio"
                                       name="user_text_default_format"
                                       data-test="user-prefs-tracker-default-format-text"
                                       value="text"
                                       {{# user_text_default_format_text }}checked{{/ user_text_default_format_text }}>
                                {{# gettext }}Text{{/ gettext }}
                            </label>

                            <label class="tlp-label tlp-radio">
                                <input type="radio"
                                       name="user_text_default_format"
                                       data-test="user-prefs-tracker-default-format-commonmark"
                                       value="commonmark"
                                       {{# user_text_default_format_commonmark }}checked{{/ user_text_default_format_commonmark }}>
                                Markdown
                            </label>
                        </div>

                        <div class="tlp-form-element">
                            <label class="tlp-label">{{# gettext }}CSV separator{{/ gettext }}</label>
                            <label class="tlp-label tlp-radio">
                                <input
                                    type="radio"
                                    name="user_csv_separator"
                                    data-test="user-prefs-csv-separator-comma"
                                    value="comma"
                                    {{# user_csv_separator_comma }}checked{{/ user_csv_separator_comma }}
                                >
                                {{# gettext }}Comma{{/ gettext }}
                            </label>
                            <label class="tlp-label tlp-radio">
                                <input
                                    type="radio"
                                    name="user_csv_separator"
                                    data-test="user-prefs-csv-separator-semicolon"
                                    value="semicolon"
                                    {{# user_csv_separator_semicolon }}checked{{/ user_csv_separator_semicolon }}
                                >
                                {{# gettext }}Semicolon{{/ gettext }}
                            </label>
                            <label class="tlp-label tlp-radio">
                                <input
                                    type="radio"
                                    name="user_csv_separator"
                                   data-test="user-prefs-csv-separator-tab"
                                    value="tab"
                                    {{# user_csv_separator_tab }}checked{{/ user_csv_separator_tab }}
                                >
                                {{# gettext }}Tab{{/ gettext }}
                            </label>
                        </div>

                        <div class="tlp-form-element">
                            <label class="tlp-label">{{# gettext }}CSV date format{{/ gettext }}</label>
                            <label class="tlp-label tlp-radio">
                                <input
                                    type="radio"
                                    name="user_csv_dateformat"
                                    data-test="user-prefs-csv-dateformat-month-day-year"
                                    value="month_day_year"
                                    {{# user_csv_dateformat_mmddyyyy }}checked{{/ user_csv_dateformat_mmddyyyy }}
                                >
                                <code>MM/DD/YYYY</code> {{# gettext }}(month/day/year){{/ gettext }}
                            </label>
                            <label class="tlp-label tlp-radio">
                                <input
                                    type="radio"
                                    name="user_csv_dateformat"
                                    data-test="user-prefs-csv-dateformat-day-month-year"
                                    value="day_month_year"
                                    {{# user_csv_dateformat_ddmmyyyy }}checked{{/ user_csv_dateformat_ddmmyyyy }}
                                >
                                <code>DD/MM/YYYY</code> {{# gettext }}(day/month/year){{/ gettext }}
                            </label>
                        </div>

                    </section>
                    <section class="tlp-pane-section tlp-pane-section-submit user-preferences-section-submit">
                        {{# csrf_token }}
                            {{> csrf_token_input }}
                        {{/ csrf_token }}

                        <button type="submit" class="tlp-button-primary" data-test="user-prefs-edition-tab-submit-button">
                            <i class="far fa-save tlp-button-icon"></i> {{# gettext }}Update{{/ gettext }}
                        </button>
                    </section>
                </form>
            </section>
        </div>
    </div>
</div>
