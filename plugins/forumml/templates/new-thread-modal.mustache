<form
    action="{{ post_thread_url }}"
    method="POST"
    enctype="multipart/form-data"
    id="forumml-post-new-thread-modal"
    class="tlp-modal"
    role="dialog"
    aria-labelledby="forumml-post-new-thread-title"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title">
            <span id="forumml-post-new-thread-title">{{# dgettext }}
                tuleap-forumml | Post a new thread{{/ dgettext }}</span>
        </h1>
        <button class="tlp-modal-close" type="button" data-dismiss="modal"
             aria-label="{{# gettext }}Close{{/gettext}}">
            <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
        </button>
    </div>
    <div class="tlp-modal-body">
        <div class="tlp-form-element">
            <label class="tlp-label" for="forumml-post-new-thread-subject">
                {{# dgettext }}tuleap-forumml | Subject{{/ dgettext }}
                <i class="fas fa-asterisk" aria-hidden="true"></i>
            </label>
            <input
                    type="text"
                    class="tlp-input"
                    id="forumml-post-new-thread-subject"
                    name="subject"
                    required>
        </div>

        <div id="forumml-post-new-thread-cc-files-mountpoint"></div>

        <div class="tlp-form-element">
            <label class="tlp-label" for="forumml-post-new-thread-body">
                {{# dgettext }}tuleap-forumml | Message{{/ dgettext }}
                <i class="fas fa-asterisk" aria-hidden="true"></i>
            </label>
            <textarea class="tlp-textarea" id="forumml-post-new-thread-body" name="message" rows="20"></textarea>
        </div>
    </div>
    <div class="tlp-modal-footer">
        <button type="reset" class="tlp-button-primary tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Cancel{{/gettext}}
        </button>
        <button type="submit" name="post" class="tlp-button-primary tlp-modal-action">
            <i class="fas fa-paper-plane tlp-button-icon" aria-hidden="true"></i>
            {{# dgettext }}tuleap-forumml | Send{{/ dgettext }}
        </button>
    </div>
</form>
