<h2 class="almost-tlp-title">{{title}}</h2>

<p>{{intro}}</p>

<form name="form_tracker_permissions" action="{{form_url}}" method="post">
    <div>
        <table class="table">
            <thead>
                <th>{{ugroup_title}}</th>
                <th>{{permissions_title}}</th>
            </thead>

            <tbody>
                {{#ugroup_permissions}}
                <tr>
                    <td>
                        {{#has_link}}
                            <a href="{{url}}">{{name}}</a>
                        {{/has_link}}
                        {{^has_link}}
                            {{name}}
                        {{/has_link}}
                    </td>
                    <td>
                        <select name="{{permission_name}}" data-test="{{ permission_name }}">
                            {{#permissions_list}}
                            <option value="{{value}}" {{selected}}>{{label}}</option>
                            {{/permissions_list}}
                        </select>
                    </td>
                </tr>
                {{/ugroup_permissions}}
            </tbody>
        </table>

        <input type="submit" name="update" value="{{submit_permissions}}" data-test="tracker-permission-submit"/>
    </div>
</form>

<p>{{{create_modify_ugroups}}}</p>
