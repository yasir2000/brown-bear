<form
        id="oauth2-server-revoke-app-modal"
        class="tlp-modal tlp-modal-danger"
        role="dialog"
        aria-labelledby="oauth2-server-revoke-app-modal-title"
        action="/plugins/oauth2_server/account/apps/revoke"
        method="post"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="oauth2-server-revoke-app-modal-title">
            {{# dgettext }}tuleap-oauth2_server | Revoke access to this App{{/ dgettext }}
        </h1>
        <button class="tlp-modal-close"
             type="button"
             data-dismiss="modal"
             aria-label="{{# dgettext }}tuleap-oauth2_server | Close{{/dgettext}}"
        ><i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i></button>
    </div>
    <div class="tlp-modal-body">
        {{# csrf_token }}
            {{> csrf_token_input }}
        {{/ csrf_token }}
        <input type="hidden" name="app_id" id="oauth2-server-revoke-app-modal-app-id">
        <p id="oauth2-server-revoke-app-modal-app-name"></p>
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
            {{# dgettext }}tuleap-oauth2_server | Cancel {{/ dgettext }}
        </button>
        <button type="submit" class="tlp-button-danger tlp-modal-action">
            <i class="far fa-trash-alt tlp-button-icon"></i> {{# dgettext }}tuleap-oauth2_server | Revoke access{{/ dgettext }}
        </button>
    </div>
</form>
