<form action="?action=delete-reference"
      method="post"
      id="delete-modal-{{ getId }}"
      class="tlp-modal"
      role="dialog"
>
    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
        <div class="tlp-modal-header">
            <h1 class="tlp-modal-title" id="delete-bugzilla-reference-{{ getId }}">
                <i class="far fa-trash-alt tlp-modal-title-icon"></i > {{ bugzilla_title_delete }}
            </h1>
            <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="Close">
                <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
            </button>
        </div>
        <div class="tlp-modal-body">
            <input type="hidden" name="id" value="{{ getId }}">
            {{ bugzilla_delete_confirmation }}
        </div>
        <div class="tlp-modal-footer">
            <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">{{ cancel }}</button>
            <button type="submit" class="tlp-button-danger tlp-modal-action">
                <i class="far fa-trash-alt tlp-button-icon"></i> {{ bugzilla_delete }}
            </button>
        </div>
    </div>
</form>
