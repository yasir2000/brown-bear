<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">{{# dgettext }} tuleap-program_management | Program Management {{/ dgettext }}</h1>
        </div>
        <section class="tlp-pane-section">
            <table class="tlp-table permission-per-group-table">
                <thead>
                <tr class="permission-per-group-double-column-table">
                    <th>{{# dgettext }} tuleap-program_management | Permission {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-program_management | Granted groups {{/ dgettext }}</th>
                </tr>
                </thead>
                <tbody>
                {{# permissions }}
                    <tr>
                        <td>{{ name }}</td>
                        <td>
                            {{# groups }}
                                <span class="{{# is_project_admin }}tlp-badge-danger tlp-badge-outline{{/ is_project_admin }}
                                    {{# is_static }}tlp-badge-primary tlp-badge-outline{{/ is_static }}
                                    {{# is_custom }}tlp-badge-secondary tlp-badge-outline{{/ is_custom }}">{{ name }}</span>
                            {{/ groups }}
                        </td>
                    </tr>
                {{/ permissions }}
                {{^ has_permissions }}
                    <tr>
                        <td colspan="2" class="tlp-table-cell-empty">
                            {{# dgettext }} tuleap-program_management | {{ user_group_name }} has no permission {{/ dgettext }}
                        </td>
                    </tr>
                {{/ has_permissions }}
                </tbody>
            </table>
        </section>
    </div>
</section>
