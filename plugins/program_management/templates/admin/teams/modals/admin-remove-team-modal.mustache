{{# aggregated_teams }}
    <div id="program-management-delete-team-{{ id }}" class="tlp-modal tlp-modal-danger" role="dialog" aria-labelledby="program-management-remove-team-modal-label-{{ id }}">
        <div class="tlp-modal-header">
            <h1 class="tlp-modal-title" id="program-management-remove-team-modal-label-{{ id }}">
                {{# dgettext }} tuleap-program_management | Remove team from program{{/dgettext}}
            </h1>
            <button class="tlp-modal-close" type="button" data-dismiss="modal" aria-label="{{# dgettext }} tuleap-program_management | Close{{/dgettext}}">
                <i class="fas fa-times tlp-modal-close-icon" aria-hidden="true"></i>
            </button>
        </div>
        <div class="tlp-modal-body">
            <p>{{# dgettext }} tuleap-program_management | You are about to remove Team {{ public_name }} from this Program.{{/dgettext}}</p>
            <p>{{# dgettext }} tuleap-program_management | Please confirm your action.{{/dgettext}}</p>
        </div>
        <div class="tlp-modal-footer">
            <button type="button" class="tlp-button-danger tlp-button-outline tlp-modal-action" data-dismiss="modal">
                {{# dgettext }} tuleap-program_management | Cancel{{/dgettext}}
            </button>
            <button type="button" class="tlp-button-danger tlp-modal-action program-management-remove-team-button" data-team-id="{{ id }}">
                <i class="far fa-trash-alt tlp-button-icon" aria-hidden="true"></i>
                {{# dgettext }} tuleap-program_management | Remove team{{/dgettext}}
            </button>
        </div>
    </div>
{{/aggregated_teams}}
