<table class="table" id="artifacts-folders-content">
    <thead>
        <tr>
            <th>{{ id_label }}</th>
            <th>{{ folder_label }}</th>
            <th>{{ summary_label }}</th>
            <th>{{ status_label }}</th>
            <th>{{ last_update_label }}</th>
            <th>{{ submitted_by_label }}</th>
            <th>{{ assigned_to_label }}</th>
        </tr>
    </thead>
    <tbody>
        {{^ artifacts }}
            <tr>
                <td colspan="9" class="no-artifacts-in-folder">{{ empty_state }}</td>
            </tr>
        {{/ artifacts }}
        {{# artifacts }}
            <tr>
                <td class="artifacts-folders-rollup">
                    <a href="{{ html_url }}" class="direct-link-to-artifact" data-artifact-id="{{ id }}">{{ xref }}</a>
                </td>
                <td>
                    {{# folder_hierarchy }}
                        <i class="fa fa-angle-right"></i>
                        <a class="direct-link-to-artifact" href="{{ url }}&view=artifactsfolders">{{ title }}</a>
                    {{/ folder_hierarchy }}
                </td>
                <td>{{ title }}</td>
                <td>{{ status }}</td>
                <td>{{ last_modified_date }}</td>
                <td>
                    {{# submitter }}
                        <a href="{{ url }}">{{ display_name }}</a>
                    {{/submitter}}
                </td>
                <td>
                    {{# assignees }}
                        <a href="{{ url }}">{{ display_name }}</a>
                    {{/ assignees }}
                </td>
            </tr>
        {{/ artifacts }}
    </tbody>
</table>
