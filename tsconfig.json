{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2015",
        "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "importHelpers": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "isolatedModules": true,
        "noImplicitOverride": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "tlp": ["src/themes/tlp/src/js/index.ts"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": ["jest"], // Do not include cypress globals, they clash with jest
        "incremental": true
    }
}
